<thead>
  <tr>
    <th>Name</th>
    <th>&nbsp;</th>
    <th>Apps.</th>
    <th>Yes</th>
    <th>Hour</th>
    <th>Day</th>
    <th>Conv.</th>
    <th>No</th>
    <th>1st D</th>
    <th>%</th>
  </tr>
</thead>
<tbody>
  <% @all_loan_approved = 0 %>
  <% @all_loan_rejected = 0 %>
  <% @all_loan_collections_on = 0 %>


  <tr>
    <th>All</th>
    <th>&nbsp;</th>
    <th><%= @allloanapps.size %></th>
    <% for allloanapp in allloanapps %>
      <% if not allloanapp.approved_at.nil? %>
        <% @all_loan_approved = @all_loan_approved + 1 %>
      <% end %>

      <% if allloanapp.aasm_state == "denied"  %>
        <% @all_loan_rejected = @all_loan_rejected + 1 %>
      <% end %>

      <% if selectdate.include? "-" %>
        <% @todate = params[:selectdate].split("-") %>
        <% if allloanapp.collections_on.to_date.strftime('%Y-%m-%d') >= @todate[0].to_date.strftime('%Y-%m-%d') && allloanapp.collections_on.to_date.strftime('%Y-%m-%d') <= @todate[1].to_date.strftime('%Y-%m-%d')  %>
          <% @all_loan_collections_on = @all_loan_collections_on + 1 %>
        <% end %>
      <% else %>
        <% @todate = params[:selectdate] %>
        <% if allloanapp.collections_on.to_date.strftime('%Y-%m-%d') == @todate.to_date.strftime('%Y-%m-%d') %>
          <% @all_loan_collections_on = @all_loan_collections_on + 1 %>
        <% end %>
      <% end %>
    <% end %>

    <th><%= @all_loan_approved %></th>
    <% if @all_loan_approved == 0 %>
      <% all_approved_loan_perhour = 0 %>
      <% all_approved_loan_perday = 0 %>
      <% all_percentageof_approved_loan = 0 %>

      <% perhour_approved = (@all_loan_approved.to_f) / 8.0 %>
      <% all_approved_loan_perhour = perhour_approved / @teammembers.size %>
      <th><%= all_approved_loan_perhour.round(2) %></th>
      <% perday_approved = (@all_loan_approved) / 5 %>
      <% all_approved_loan_perday = perday_approved / @teammembers.size %>
      <th><%= all_approved_loan_perday %></th>
      <% percentageof_approved_loan = ((100) * (@all_loan_approved.to_f)) / @allloanapps.size %>
      <% all_percentageof_approved_loan = percentageof_approved_loan / @teammembers.size %>
      <th><%= all_percentageof_approved_loan.round(2) %> %</th>
      <th><%= @all_loan_rejected %></th>
      <th><%#= @all_loan_collections_on %></th>
      <th>30</th>
    </tr>
  </tbody>
