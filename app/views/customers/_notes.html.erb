<%= display_flash(flash) %>

<% customer.comments.each do |comment| %>
  <%= render :partial => "comment", :locals => { :comment => comment } %>
<% end %>

<% form_tag add_comment_customer_path(customer) do %>
  <p>
		<%= text_area_tag :message, "", :class => "text-input long-input" %>
	</p>
	<p>
		<input class="button" type="submit" value="Add Comment" />
	</p>
  <div class="clear"></div>
<% end %>
