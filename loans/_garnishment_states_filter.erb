<div class="content-box-header" style="height: 20px;">
  <%= link_to_function "&nbsp;", "$(this).toggleClass('on'); $('#filters_bar').slideToggle(); $('#filters_button').slideToggle();", :id => "filters_toggle" %>
  <div class="clear"></div>
</div>

<div id="filters_bar" style="display: none;">
  <% form_tag "/my_loans", :method => :get do -%>
    <ul>
      <li>
        <input type="checkbox"  name="filters[packet_sent]"  value="on"
        <% if filters.include? 'packet_sent' %>
                 checked="checked"
               <% end %>/>
        Packet Sent
      </li>

      <li>
        <input type="checkbox"  name="filters[packet_confirmed]"  value="on"
        <% if filters.include? 'packet_confirmed' %>
                 checked="checked"
               <% end %>/>
        Packet Confirmed
      </li>

      <li>
        <input type="checkbox"  name="filters[approved]"  value="on"
        <% if filters.include? 'approved' %>
                 checked="checked"
               <% end %>/>
        Approved
      </li>

      <li>
        <input type="checkbox"  name="filters[no_payments_30_days]"  value="on"
        <% if filters.include? 'no_payments_30_days' %>
                 checked="checked"
               <% end %>/>
        No Payments 30 Days
      </li>

    </ul>
    <div id="filters_button" style="float: right; display: none;">
      <input type="image" src="/images/btn-apply-filters.png" border="0" width="126" height="22" style="width: 126px; height: 22px;" />
    </div>
  <%- end -%>
  <div class="clear"></div>
</div>