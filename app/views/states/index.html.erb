<% title("States") %>
<% subtitle("States")%>

<div class="content-box"><!-- Start Content Box -->

  <div class="content-box-header">

    <ul class="content-box-tabs">
      <li><a href="#tab1" class="<%= default_tab_class('tab1') -%>" rel="history">List</a></li> <!-- href must be unique and match the id of target div -->
      <li><a href="#tab2" class="<%= default_tab_class('tab2') -%>" rel="history">Create</a></li>
    </ul>

    <div class="clear"></div>
  </div> <!-- End .content-box-header -->

  <div class="content-box-content">

    <%= display_flash(flash) %>

    <div class="tab-content <%= default_tab_class('tab1') -%>" id="tab1">
      <table>

        <tfoot>
          <tr>
            <td colspan="5">
              <%#= will_paginate @message_categories %>
              <div class="clear"></div>
            </td>
          </tr>
        </tfoot>

        <tbody>
          <% @states.each do |state| %>
            <tr>
              <%if not state.name.blank?%>
                <td>
                  <h5 style="padding-bottom: 0px;"><%= state.name.titleize %></h5>
                  <span class="small"><%= state.code %></span>
                </td>
              <% else %>
                <td>
                  <h5 style="padding-bottom: 0px;"><%= state.max_apr %></h5>
                  <span class="small"><%= state.max_loan_amount %></span>
                </td>

              <% end %>
              <td class="icons">
                <%= link_to image_tag("icons/pencil.png", :title => "Edit", :alt => "Edit"),  edit_state_path(state) %>
                <%= link_to image_tag("icons/cross.png", :title => "Delete", :alt => "Delete"), state_path(state), :method => :delete, :confirm => "Are you sure?" %>
              </td>
            </tr>
          <% end %>
        </tbody>

      </table>
    </div>

    <div class="tab-content <%= default_tab_class('tab2') -%>" id="tab2">
      <% form_for :state do |f| %>
        <%= render :partial => "form", :locals => { :f => f,:edit_flag=>"new" } %>
      <% end %>
    </div>

  </div>

</div>