	<div class="content-box-header">
	  <h3><%= h @mail_template.name.titleize %></h3>
		<div class="clear"></div>
	</div> <!-- End .content-box-header -->

  <div class="content-box-content">
    
    <%= display_flash(flash) %>
  	
  	<% form_for @mail_template do |f| %>
      <%= render :partial => "form", :locals => { :f => f } %>
    <% end %>
    
  </div>
</div>