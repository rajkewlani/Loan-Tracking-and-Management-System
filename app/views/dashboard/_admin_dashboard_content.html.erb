            <div style="width:250px;float: left;font-weight: bold;margin-left: 10px;height:20px;">
              <%= i.to_s + ".  "  %><%=  @topusers[:collector_record_desc][collector_record][:collector_full_name] %>
            </div>
            <div style="float: left;font-weight: bold;"><%=  @topusers[:collector_record_desc][collector_record][:collections_loan_count] %></div>
          </div>
          <% i+=1 %>
          <% end %>
        <% end %>
      </div>
    </div>
    <div style="margin-left: 30px;margin-right: 30px;margin-bottom: 30px;margin-top: 15px;">
      <div id="garnishment_star" style="width: 370px;background-color: #f0f0f0;height: 150px;border: 1px solid #cdcdcd;">
        <div style="padding: 10px;font-size: 20px;">
          <strong>Garnishment</strong>
        </div>
        <% i = 1 %>
        <% for garnisher_record in (0..2) %>
          <% if @topusers && @topusers[:garnisher_record_desc][garnisher_record] %>
          <div style="margin-left: 10px;">
            <div style="width:250px;float: left;font-weight: bold;margin-left: 10px;height:20px;">
              <%= i.to_s + ".  "  %><%=  @topusers[:garnisher_record_desc][garnisher_record][:garnisher_full_name] %>
            </div>
            <div style="float: left;font-weight: bold;">
              <%= @topusers[:garnisher_record_desc][garnisher_record][:garnisher_loan_count] %>
            </div>
          </div>
          <% i+=1 %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>