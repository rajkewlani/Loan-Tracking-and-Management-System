  </div>

   <div style="height:15px;"></div>

  <div id="max_loan_days">
    <%= f.label :max_loan_days, "Max loan days" %>
    <%= f.text_field :max_loan_days %>
  </div>

  <div style="height:15px;"></div>

  <div id="max_extensions">
