<% title("My Loans") %>
<div class="content-box"><!-- Start Content Box -->

  
  
  <% if current_user.role == "garnishments" %>
    <%= render :partial => 'garnishment_states_filter',:locals=>{:filters=>@filters} %>
  <% else  %>
  <div class="content-box-header" style="height: 20px;"></div>
  <% end %>


  <div class="content-box-content">



    <%= display_flash(flash) %>


    <%= render :partial => "/includes/#{@role}_loans_worksheet", :locals => { :loans => @loans } %>
    <table>

      <tfoot>
        <tr>
          <td colspan="3">
            <%= will_paginate @loans %>
            <div class="clear"></div>
          </td>
        </tr>
      </tfoot>


    </table>
  </div>

</div>