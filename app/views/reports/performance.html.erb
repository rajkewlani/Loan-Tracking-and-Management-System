<script type="text/javascript">
  function blockEnter(evt)
  {
    evt = (evt) ? evt : event;
    var charCode = (evt.charCode) ? evt.charCode :
      ((evt.which) ? evt.which : evt.keyCode);
    if (charCode == 13)
    {
      return false;
    }
    else
    {
      return true;
    }
  }

  function ShowMenu(){
    $('#report_menu').slideToggle();
  }

  $(document).ready(function()
  {
    $('#go').click(function() {
      daterange = $('#daterange').val();
      if (daterange == "")
      {
        alert('please select Date');
        return false;
      }
      else
      {
        $.post("/performance_asper_selectdate/","selectdate="+$('#daterange').val(),null,"script");
      }
    });
  });
		  
 
</script>
