<% title("Message Templates") %>
<% subtitle("Administration tool to manage the content of your Message.")%>

<div class="content-box"><!-- Start Content Box -->

  <div class="content-box-header">

    <ul class="content-box-tabs">
      <li><a href="#tab1" class="<%= default_tab_class('tab1') -%>" rel="history">List</a></li> <!-- href must be unique and match the id of target div -->
      <li><a href="#tab2" class="<%= default_tab_class('tab2') -%>" rel="history">Create</a></li>
    </ul>

    <div class="clear"></div>
  </div> <!-- End .content-box-header -->

  <div class="content-box-content">

    <%= display_flash(flash) %>

    <div class="tab-content <%= default_tab_class('tab1') -%>" id="tab1">
      <table>

        <tfoot>
          <tr>
            <td colspan="5">
              <%= will_paginate @message_categories %>
              <div class="clear"></div>
            </td>
          </tr>
        </tfoot>

        <tbody>
          <% @message_templates.each do |message_template| %>
            <tr>
              <%if not message_template.name.blank?%>
                <td>
                  <h5 style="padding-bottom: 0px;"><%= message_template.name.titleize %></h5>
                  <span class="small"><%= message_template.description %></span>
                </td>
              <% else %>
                <td>
                  <h5 style="padding-bottom: 0px;"><%= message_template.subject.titleize %></h5>
                  <span class="small"><%= message_template.description %></span>
                </td>

              <% end %>
              <td class="icons">
                <%= link_to image_tag("icons/pencil.png", :title => "Edit", :alt => "Edit"),  edit_message_template_path(message_template) %>
                <%= link_to image_tag("icons/cross.png", :title => "Delete", :alt => "Delete"), message_template_path(message_template), :method => :delete, :confirm => "Are you sure?" %>
              </td>
            </tr>
          <% end %>
        </tbody>

      </table>
    </div>

    <div class="tab-content <%= default_tab_class('tab2') -%>" id="tab2">
      <% form_for :message_template do |f| %>
        <%= render :partial => "form", :locals => { :f => f,:edit_flag=>"new", :message_template => @message_template } %>
      <% end %>
    </div>

  </div>

</div>