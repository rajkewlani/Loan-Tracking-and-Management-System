  <div style="height:25px;"></div>

  <div id="country_name">
    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>
  </div>

  <div style="height:15px;"></div>

  <div id="country_code">
    <%= f.label :code, "Country Code" %>
    <%= f.text_field :code,:maxlength=>2 %>
  </div>

  <div style="height:15px;"></div>


  <div id="country_max_apr">
    <%= f.label :max_apr, "Max apr" %>
    <%= f.text_field :max_apr %>
  </div>

   <div style="height:15px;"></div>

  <div id="max_loan_amount">
    <%= f.label :max_loan_amount, "Max loan ammount" %>
