<% title("Edit Lead Filter") %>
<% subtitle(FORM_SUBTITLE)%>

<div class="content-box"><!-- Start Content Box -->

	<div class="content-box-header">
	  <h3>Form</h3>
		<div class="clear"></div>
	</div> <!-- End .content-box-header -->

  <div class="content-box-content">

    <%= display_flash(flash) %>
  	
  	<fieldset class="column-left">
    	<% form_for @lead_filter do |f| %>
        <%= render :partial => "form", :locals => { :f => f } %>
      <% end %>
    </fieldset>
    
    <fieldset class="column-right">
      <h4>Lead Providers using this filter:</h4>
      <ul>
      <% @lead_filter.lead_providers.each do |lead_provider| %>
        <li><%= link_to lead_provider.name, lead_provider_path(lead_provider) %></li>
      <% end %>
      </ul>
    </fieldset>
    
    <div class="clear"></div>
    
  </div>
</div>

<div class="clear"></div>