

<% title("Update Message Template") %>
<% subtitle(FORM_SUBTITLE)%>

<div class="content-box"><!-- Start Content Box -->

  <div class="content-box-header">
    <h3><%=h @message_template.name.titleize %></h3>
    <div class="clear"></div>
  </div> <!-- End .content-box-header -->

  <div class="content-box-content">

    <%= display_flash(flash) %>

    <% form_for @message_template,:url => {:action => 'update'} do |f| %>
      <%= render :partial => "form", :locals => { :f => f, :msg_template=>@message_template } %>
    <% end %>

  </div>
</div>